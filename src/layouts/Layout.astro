---
import OpenGraph from "@components/common/OpenGraph.astro";
import Navbar from "@components/page/Navbar.astro";
import "@styles/global.css";
import popoyoteLogo from "../assets/popoyote-dev.svg";
const { pageTitle, ogImage, ogTitle, ogDescription } = Astro.props;
const ogUrl = Astro.url;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={popoyoteLogo.src} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>

		<OpenGraph
			ogImage={ogImage}
			ogTitle={ogTitle}
			ogDescription={ogDescription}
			ogUrl={ogUrl}
		/>
	</head>
	<body>
		<header>
			<Navbar active={pageTitle} />
		</header>
		<main>
			<slot />
		</main>

		<!-- <Footer /> -->
	</body>
</html>
